{
  "manifest_version": 3,
  "name": "Random Album for YouTube Music™",
  "version": "1.0",
  "description": "Automatically play a random album from your YouTube Music™ library by clicking the extension icon.",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [ "https://music.youtube.com/*" ],
  "options_ui": {
    "page": "options.html",
    "browser_style": false
  }
}